@model ShoppingCartViewModel

<h3 class="my-5">
    Shopping cart
</h3>


<div class="row gx-3">
    <div class="col-8">
        @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
        {
            <div class="card shopping-cart-card mb-2">
                <div class="row">
                    
                    <div class="col-md-4">
                        <img src="@line.RoomType.ImageThumbnail" class="img-fluid rounded-start p-2" alt="@line.RoomType.RoomTypeName">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-text">@line.Amount x @line.RoomType.RoomTypeName</h5>
                            <div class="d-flex justify-content-between">
                                <h2>@line.RoomType.RoomRate.ToString("c")</h2>
                                <div class="row">
                                    <div class="col">
                                        <h4>Check-In: </h4>
                                        <h4>@line.CheckInDate</h4>
                                    </div>
                                    <div class="col">
                                        <h4>Check-Out: </h4>
                                        <h4>@line.CheckOutDate</h4>
                                    </div>
                                    <div class="col">
                                        <h4>Duration: </h4>
                                        <h4>@line.StayDuration Night</h4>
                                    </div>
                                </div>
                             </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-4">
        <div class="card shopping-cart-card p-3">
            <div class="row">
                <h4 class="col">Total:</h4>
                <h4 class="col text-end">@Model.ShoppingCartTotal.ToString("c")</h4>
            </div>
            <hr />
            <div class="text-center d-grid">
                <a class="btn btn-secondary" asp-controller="Reservation" asp-action="CheckOut">
                    Book Now!
                </a>
            </div>
        </div>
    </div>
</div>
