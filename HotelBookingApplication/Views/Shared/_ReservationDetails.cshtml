@model IEnumerable<ReservationDetails>
<div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Reservation Details</h2>
        </div>

        <div class="modal-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            ReservationDetailId
                        </th>
                        <th>
                            RoomId
                        </th>
                        <th>
                            Check In Date
                        </th>
                        <th>
                            Check Out Date
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            ReservationId
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReservationDetailsId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RoomId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CheckInDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CheckOutDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReservationId)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
    </div>
</>
    
