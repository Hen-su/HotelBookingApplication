@model Reservation


<br>
<h1>Delete</h1>
<br>
<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReservationId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReservationId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfGuests)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfGuests)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GuestDetailsId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GuestDetailsId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsPaid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsPaid)
        </dd>
        @foreach (var detail in Model.RDidNavigation)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => detail.ReservationDetailsId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => detail.ReservationDetailsId)
            </dd>
        }
        <dt class="col-sm-2">
            Reservation Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RSidNavigation.ReservationStatusName)
        </dd>
    </dl>
</div>
<div>
    <button data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" class="btn btn-secondary" id="deleteBtn">Delete</button> |
    <a asp-action="AllReservations">Back to List</a>
</div>

<div class="modal fade" id="confirmDeleteModal" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="close" data-bs-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this item? <br />
                This will delete associated Reservation Details as well
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a asp-action="DeleteConfirmed" asp-route-id="@Model.ReservationId" class="btn btn-danger" id="confirmDeleteBtn">Delete</a>
            </div>
        </div>
    </div>
</div>


